{
  "cleanUrls": true,
  "framework": "vite",
  "trailingSlash": false,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/*", "dest": "/api/*" },
    { "src": "/(.*)", "dest": "/" }
  ]
}
